@page "/"

<div class="header">
    <h1>القرآن الكريم</h1>
    <input type="text" class="search-input"
           id="searchInput" placeholder="ابحث عن قارئ..."
           @bind="searchText"
           @bind:event="oninput">
</div>

@foreach (var letter in alphabet)
{
    var matching = readers.Where(r => r.Name[0] == letter && r.Name.Contains(searchText)).ToList();
    @if(!matching.Any())
    {
        continue;
    }

    <div class="letter-group">
        <div class="letter-header">@(letter.ToString())</div>
        <ul class="reader-list">
            @foreach (var reader in matching)
            {
                <li class="reader-item">
                    <div class="reader-name">@reader.Name</div>
                </li>
            }
        </ul>
    </div>
}